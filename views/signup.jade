extends ./login_layout
block content
    main#loginBody
        section#login
            h1 Sign Up
            h2 </br>
            form(action="/users", method="POST")
                div.form-group
                    label.form-label(for='email') Email
                    input.form-control(type='text', name='email', placeholder='Email', required, id="email")
                </br>
                div
                    label.form-label(for="password") Password
                    input.form-control(type='password', name='password', placeholder='Password', required, id="password")
                </br>
                div
                    label.form-label(for="password") Password Confirmation
                    input.form-control(type='password', name='password_confirmation', placeholder='Password Confirmation', required, id="password")
                </br>
                div
                    label.form-label(for="username") Username
                    input.form-control(type='text', name='username', placeholder='Username', required, id="username")
                </br>
                div
                    input.btn.btn-primary(type='submit', value='Sign up')