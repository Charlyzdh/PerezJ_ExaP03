extends ../../layout
block content
    div.containerOp
        div.headerTitle
            h1 Opiniones
            a.px-2(href="/app/imgs/new")
                img(src="../../../public/img/add-comment.png", alt="")
        div.opinions
            for imagen in img
                div.opTitle
                    h2=imagen.title
                    div.opContent
                        p=imagen.comment
                        div.opControls
                            a.px-2(href="/app/imgs/#{imagen._id}/edit") Edit
                            form.link(action="/app/imgs/#{imagen._id}?_method=DELETE", method="POST") 
                                input(type="submit", value="Delete")