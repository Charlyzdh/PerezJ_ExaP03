extends ../../layout
block content
    div.container
        h1 Image Repository </br>
        for imagen in img
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2
                        a.px-2(href="/app/imgs/#{imagen._id}/edit") Edit
                        form.link(action="/app/imgs/#{imagen._id}?_method=DELETE", method="POST") 
                            input(type="submit", value="Delete")